{% extends '@TraitUpload/Default/template.html.twig' %}
 {% block stylesheets %} {{ parent() }} {% endblock %}
    {% block Gallery %}
        <div class="row-fluid">
            <div class="page-header">
                <h3>Liste </h3>
            </div>
        </div>
        <div class="row-flow">
            {% if entities is empty %}
                <div class="alert alert-info" role="alert" style="margin-top: 10px;">
                    <p>
                        <strong>Info ! </strong>
                        Aucune information n'est disponible dans la base de donn√©es. Voulez-vous
                        <a href="{{ path('trait_upload_new') }}" class="alert-link"> Ajouter du nouveau contenu</a> ?
                    </p>
                </div>
            {% else %}
                {% for entity in entities %}
                    <div class="col-sm-6 col-md-4">
                        <a href="{{ path('trait_upload_show', { 'id': entity.id }) }}">
                            <div class="thumbnail">
                                <img src="{{ asset(entity.webPath) }}" alt="{{ entity.name }}">
                                <div class="caption">
                                    <h3>{{ entity.name }}</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% endblock %}
{% block javascripts %} {{ parent() }} {% endblock %}

