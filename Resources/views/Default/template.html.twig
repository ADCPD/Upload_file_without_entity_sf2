{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/progressasset/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/traitupload/fancybox/css/jquery.fancybox.css') }}">
{% endblock %}
<div class="container">
    <div class="row-fluid">
        <div class="col-xs-4">
            <div class="page-header">
                <h3>Upload Module</h3>
            </div>
            <p>
                <a href="{{ path('trait_upload_index') }}"><strong> > </strong>Liste</a>
                <br>
                <a href="{{ path('trait_upload_new') }}"><strong> > </strong>Ajouter un nouveau element</a>

            </p>
        </div>
        <div class="col-xs-8">
            {% block Gallery %}
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}

            {% endblock %}
        </div>
    </div>


</div>
{% block javascripts %}

    <script src="{{ asset('bundles/asset/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/progressasset/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/traitupload/fancybox/js/jquery.fancybox.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".fancybox-thumb").fancybox({
                prevEffect: 'none',
                nextEffect: 'none',
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    thumbs: {
                        width: 50,
                        height: 50
                    }
                }
            });
        });
    </script>
{% endblock %}